{
  "name": "bts-blocktrust",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test:frontend": "cd frontend && npm test",
    "test:contracts": "npx hardhat test",
    "test:contracts:coverage": "npx hardhat coverage",
    "test:gasless": "npx hardhat test test/gasless-polygon.test.ts",
    "test:all": "npm run test:frontend && npm run test:contracts",
    "compile:contracts": "npx hardhat compile",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:testnet": "npx hardhat run scripts/deploy-polygon.ts --network amoy",
    "deploy:mainnet": "npx hardhat run scripts/deploy-polygon.ts --network polygon",
    "migrate:signatures": "npx hardhat run scripts/migrate-signatures.ts",
    "validate:gasless": "node -e \"console.log('Validating gasless configuration...'); require('./src/services/account-abstraction.service.js').accountAbstractionService.validateConfiguration().then(r => console.log(r));\"",
    "start:gasless-demo": "node -e \"console.log('Gasless transaction demo - check src/examples/BlocktrustGaslessExample.tsx');\""
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "chai": "^4.3.10",
    "ethers": "^6.13.0",
    "hardhat": "^2.22.15"
  },
  "dependencies": {
    "@biconomy/account": "^4.5.7",
    "@biconomy/bundler": "^3.1.4",
    "@biconomy/common": "^3.1.4",
    "@biconomy/core-types": "^3.1.4",
    "@biconomy/modules": "^3.1.4",
    "@biconomy/paymaster": "^3.1.4",
    "dotenv": "^17.2.3"
  }
}
